<div class="row">
  <div class="span7">
    <table class="tasks">
  
    </table>
    <br />
  </div>
  
  
  
  <div class="span5 hidden-phone" style=""  >
    <div class="well" id="editor">

      <div class="input-prepend">
          <span class="add-on"><i class="icon-text-width"></i></span>
          <input type="text" id="inputTitle" class="input-xlarge" style="width:368px">
      </div>
      
      <textarea type="text" id="inputComment" style="width:395px" rows=10></textarea>
      

      <div class="form-actions">
        <button class="btn star"><i class=" icon-bell "></i> Neu</button>
        <button class="btn star"><i class=" icon-flag "></i> Wichtig</button>
        <button class="btn star"><i class="icon-thumbs-down "></i> Bug</button>
        <button class="btn star  pull-right"><i class="icon-star "></i> STAR</button>
      </div>
      
      
      <div class="input-prepend">
          <span class="add-on"><i class="icon-tags"></i></span>
          <input type="text" id="inputTags" class="input-xlarge" style="width:368px">
      </div>
      <div class="form-actions">
        <button class="btn btn-primary save"><i class="icon-ok icon-white"></i> Save</button>
        <button class="btn btn-primary nextbutton"><i class="icon-ok icon-white"></i> Next...</button>
        <button class="btn btn-danger pull-right gotrash"><i class="icon-white icon-trash"></i></button>
        <button class="btn btn-warning  pull-right cancelbutton"><i class="icon-arrow-left icon-white" style="display:none"></i> Abbruch</button>
      </div>
 
      <br>
        
        
    <div class="row-fluid">
      <div class="span6">
        
        <div class = "control-label"> Prioritaet </div>
        <div class="controls"><input type="text" id="inputPriority" class="input-medium"></div>
       
        <div class = "control-label"> Projekt </div>
        <div class="controls"><input type="text" id="inputProjekt_id" class="input-medium"></div>
      
       <div class = "control-label"> Autor </div>
       <div class="controls"><input type="text" id="inputAutor" class="input-medium"></div>
      
      <div class = "control-label"> Autor2 </div>
      <div class="controls"><input type="text" id="inputAutor2" class="input-medium"></div>
      
      </div>
      <div class="span6">
 
        <div class = "control-label"> Status </div>
        <div class="controls"><input type="text" id="inputStatus" class="input-medium"></div>
      
        <div class = "control-label"> Task-Type </div>
        <div class="controls"><input type="text" id="inputTasktype" class="input-medium"></div>

        <div class = "control-label"> Wichtig </div>
        <div class="controls"><input type="text" id="inputWichtig" class="input-medium"></div>
      
        <div class = "control-label"> Assigned_to </div>
        <div class="controls"><input type="text" id="inputAssigned_to" class="input-medium"></div>
  
      </div>
     </div> 
        
       

      
        
    </div>
  </div>
</div>
