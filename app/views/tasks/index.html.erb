  .tasks .comment { font-size: 9pt; padding: 4px; background-color:#fafafa; }
  .tasks .tags { font-size: 7pt; padding: 4px; background-color:#fafafa; }
  .tasks .tags i { vertical-align: middle }
  
  tr.miditask .comment,  tr.miditask  .tags,  tr.miditask +tr.details,  tr.miditask +tr.details +.extraspace  { display:none; }
  tr.selected .comment,  tr.selected  .tags,  tr.selected +tr.details,  tr.selected +tr.details +.extraspace  { display:block; }
  tr.selected   { border-top: 4px solid transparent; }
  
  .form-actions { margin: 10px -20px -20px; background: #fafafa; }
  #editor { overflow: hidden; }
  
  .maxitask strong { color: #488b6a; font-size: 13px; }
  .miditask .head   {width:400px; }
  
  .toolbar-plus.hidden { background: #333;  display: none; }
  
</style>

  
  
