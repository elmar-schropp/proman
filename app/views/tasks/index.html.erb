  .miditask .head { border-top: 1px solid #0000ff; border-bottom: 0px solid #82a292; padding: 4px;
             font-weight: bold; color: #000000; text-shadow: 0px 1px 1px #fff; }
  .miditask.selected .head { background: #84c0fc; color: #1e49ac; border-color: #6d9ed0;
